yuno,184,173,4	script	Freidrich#Yuno	729,{
	if (rand(1,5) == 1) {
		mes "[Freidrich]";
		mes "^3355FFYuno^000000 is kept aloft in the air by an ancient and mysterious force.";
		next;
		mes "[Freidrich]";
		mes "This power is said to come from a relic from an ancient civilization called ^3355FFJuperos^000000 which existed here long before Yuno.";
		next;
		mes "[Freidrich]";
		mes "Research revealed that Yuno's power source based on ^3355FFPieces of Ymir's Heart^000000. I hear that this power source is found where Juperos used to exist.";
		next;
		mes "[Freidrich]";
		mes "Since many scholars have been coming to Yuno to study and research this power source, our city is basically a well known mecca for scholars.";
		close;
	}
	else {
		mes "[Freidrich]";
		mes "The city of Sages,";
		mes "^3355FFYuno,^000000 is made of";
		mes "three islands.";
		next;
		mes "[Freidrich]";
		mes "These are Solomon, the island of honor, Mineta, the island of prosperity, and Snotora, the island of knowledge.";
		next;
		mes "[Freidrich]";
		mes "The location of each island is";
		mes "North-west : Solomon";
		mes "North-east : Snotora";
		mes "South : Mineta.";
		close;
	}
}

yuno,337,227,4	script	Yuno Granny#Yuno	103,{
	mes "[Granny]";
		mes "I am an old Sage granny who foresees everything...";
		next;
		mes "[Granny]";
		mes "Have you heard of a boss monster that has been around Yuno for a long time? It's known only as the ^FF3355Muspelskoll^000000.";
		next;
		mes "[Granny]";
		mes "It is rumored to be born from a volcano. It usually roams inside the Magma Dungeon. I'd avoid it if I were you. It's very dangerous.";
		close;
	}

yuno,328,239,4	script	Yuno Fighter#Yuno	732,{
	mes "[Sergiof]";
	mes "My name is Sergiof,";
	mes "the fighter who";
	mes "serves Granny.";
	next;
	mes "[Sergiof]";
	mes "I will tell you about ^3355FFGrand Peco^000000 which is a high level Peco Peco. Grand Peco is faster than Peco Peco and is quite aggressive.";
	next;
	mes "[Sergiof]";
	mes "It attacks using its strong bill and many Peco Pecos follow it. There's quite a difference in power between Peco Peco and the Grand Peco.";
	close;
}

yuno,343,68,4	script	Yuno Despot#Yuno	730,{
	mes "[Ninno]";
	mes "Have you ever heard of a Desert king who was once believed to be a son of a god? He was the ^3355FFPharaoh^000000.";
	next;
	mes "[Ninno]";
	mes "He was rumored to be a high sorcerer that used his power to curse innocents. It is said that he is still around, placing his curses on people.";
	next;
	mes "[Ninno]";
	mes "As an adventurer, it's possible that you may see him in your travels. Be careful...";
	close;
}

